{
    "template": "jvm-metrics-*",
    "settings": {
        "index": {
            "number_of_shards": "1",
            "number_of_replicas": "0"
        }
    },
    "mappings": {
        "jvm-metrics": {
            "properties": {
                "@timestamp": {
                    "format": "dateOptionalTime",
                    "type": "date"
                },
                "metric": {
                    "type": "double"
                }
            }
        }
    }
}
